<Window
    x:Class="WSPack.Lib.WPF.Views.StartPageEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonLib="clr-namespace:WSPack.Lib.WPF.CommonLib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WSPack.Lib.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:WSPack.Lib.WPF.ViewModel"
    Title="Edição da página inicial"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodel:StartPageViewModel}"
    Icon="..\Resources\startpage.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <commonLib:WSGrid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <local:StartPageEditToolbarControl Grid.Row="0" Grid.Column="0"
            Margin="3,3,0,0" />

        <ListBox Name="listaGrupos" Grid.Row="1"
            BorderThickness="0"
            ItemsSource="{Binding GroupList}"
            SelectedItem="{Binding SelectedGroup}">

            <!-- Painel para os grupos -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <!-- Definir controles para os items do grupo -->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <commonLib:WSTextBlock Text="{Binding GroupCaption}" />
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

    </commonLib:WSGrid>
</Window>
